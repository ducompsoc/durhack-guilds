{
  "$schema": "https://json.schemastore.org/package",
  "name": "durhack-megateams-server",
  "description": "Server for DurHack Megateams project",
  "version": "0.1.0",
  "private": true,
  "author": {
    "name": "Durham University Computing Society",
    "email": "computingsociety@durham.ac.uk",
    "url": "https://compsoc.tech/"
  },
  "contributors": [
    "Joe Clack <durhack@joeclack.me.uk>",
    "Jacob Wrenn <jacob@wrenn.me>",
    "Amber G <amber.g@durhack.com>",
    "Luca Huelle <lucahuelle@gmail.com>"
  ],
  "repository": {
    "url": "https://github.com/ducompsoc/durhack-megateams"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "start": "npx cross-env NODE_ENV=production node --import extensionless/register ./dist/main.js",
    "dev": "tsx ./src/main",
    "dev:watch": "tsx watch ./src/main",
    "compile": "npx tsc -p tsconfig.json && npx tsc-alias -p tsconfig.json",
    "lint": "npx eslint . -c ./.eslintrc.yml",
    "build": "npm run format:write && npm run compile",
    "ci-test": "jest --passWithNoTests",
    "format:write": "prettier --write './**/*.ts'",
    "format:check": "prettier --check './**/*.ts'",
    "test": "jest",
    "all": "npm run format:write && npm run lint && npm run test && npm run compile"
  },
  "type": "module",
  "dependencies": {
    "@prisma/client": "^5.18.0",
    "@types/crypto-js": "^4.1.2",
    "body-parser": "github:expressjs/body-parser#2.x",
    "config": "^3.3.9",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "crypto-js": "^4.1.1",
    "csrf-csrf": "^3.0.0",
    "dateformat": "^5.0.3",
    "express": "github:expressjs/express#5.0",
    "express-mysql-session": "^3.0.0",
    "express-session": "^1.17.3",
    "http-errors": "^2.0.0",
    "method-override": "^3.0.0",
    "mysql2": "^3.6.0",
    "node-fetch": "^3.3.2",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "passport-oauth2": "^1.7.0",
    "passport-oauth2-refresh": "^2.2.0",
    "sequelize": "^6.32.1",
    "sequelize-typescript": "^2.1.5",
    "unique-names-generator": "^4.7.1",
    "uuid": "^9.0.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/config": "^3.3.1",
    "@types/cookie-parser": "^1.4.4",
    "@types/cors": "^2.8.14",
    "@types/dateformat": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/express-mysql-session": "^3.0.0",
    "@types/express-session": "^1.17.7",
    "@types/http-errors": "^2.0.1",
    "@types/method-override": "^0.0.32",
    "@types/node": "^20.5.9",
    "@types/passport": "^1.0.12",
    "@types/passport-local": "^1.0.35",
    "@types/passport-oauth2": "^1.4.12",
    "@types/passport-oauth2-refresh": "^1.1.1",
    "@types/uuid": "^9.0.3",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "eslint": "^8.48.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-github": "^4.10.1",
    "eslint-plugin-jest": "^27.6.3",
    "eslint-plugin-jsonc": "^2.13.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-tsdoc": "^0.2.17",
    "extensionless": "^1.9.6",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "prettier-eslint": "^16.3.0",
    "prisma": "^5.18.0",
    "ts-jest": "^29.1.2",
    "tsc-alias": "^1.8.8",
    "tsx": "^3.12.8",
    "typescript": "^5.1.6"
  }
}
