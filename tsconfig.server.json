{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "outDir": "dist",
    "lib": ["ESNext"],
    "target": "es2019",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": false,
    "moduleResolution": "NodeNext",
    "noEmit": false,
    "paths": {
      "@/server/*": ["./src/server/*"]
    }
  },
  "include": ["src/server"]
}
