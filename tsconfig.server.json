{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "lib": ["esnext"],
    "target": "es2019",
    "baseUrl": "src/server",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": false,
    "moduleResolution": "node",
    "noEmit": false,
    "paths": {
      "@server/*": ["src/server/*"]
    }
  },
  "include": ["src/server/**/*.ts"]
}
